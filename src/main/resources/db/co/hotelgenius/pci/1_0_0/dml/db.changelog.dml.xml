<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


	<changeSet id="insert_users" author="t.sergouniotis">

		<insert tableName="users">
			<column name="user_id" valueSequenceNext="users_pk_sequence" />
			<column name="first_name" value="admin" />
			<column name="last_name" value="admin" />
			<column name="email" value="admin@hotelgenius.co" />
			<column name="username" value="admin" />
			<column name="password" value="LzSnOSWvl1vUCR1teuk1PA==" />
		</insert>
		
		<insert tableName="users_roles">
			<column name="user_id" valueComputed="(select user_id from users where username='admin')" />
			<column name="role" value="ROLE_CARD_REQUESTOR" />
		</insert>		

	</changeSet>

	<changeSet id="insert_oauth_clients" author="t.sergouniotis">

		<insert tableName="oauth_client_details">
			<column name="client_id" value="booking_engine" />
			<column name="resource_ids" value="pci" />
			<column name="client_secret" value="secret" />
			<column name="authorized_grant_types" value="password,client_credentials" />
			<column name="authorities" value="CARD_REQUESTOR,CARD_NOTIFIER" />
			<column name="access_token_validity" value="300" />
			<column name="scope" value="read,write" />
		</insert>

	</changeSet>


</databaseChangeLog>